#:kivy 1.0
<MyBoxLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            text: "Select Answer"
            font_size: 32
            color: (0,0,0,1)
            bold: True
            font_size: 50
    
        GridLayout:
            cols: 2

            Label:
                text: "A"
                font_size: 20
                color: (0,0,0,1)
                bold: True
                font_size: 50
            CheckBox:
                group: "answer" # to transform in radio button
                on_active: root.checkbox_click(self, self.active, "A")
            
            Label:
                text: "B"
                font_size: 20
                color: (0,0,0,1)
                bold: True
                font_size: 50
            CheckBox:
                group: "answer"
                on_active: root.checkbox_click(self, self.active, "B")
        
            Label:
                text: "C"
                font_size: 20
                color: (0,0,0,1)
                bold: True
                font_size: 50
            CheckBox:
                group: "answer"
                on_active: root.checkbox_click(self, self.active, "C")
        
        Label:
            id: output_label
            text: ""
            color: (0,0,0,1)
            bold: True
            font_size: 50
