#:kivy 1.0
<MyBoxLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        

        Label:
            text: "Select answer"
            color: (0,0,0,1)
            bold: True
            font_size: 50
    
        GridLayout:
            cols: 2

            Label:
                text: "You choose A"
                color: (0,0,0,1)
                bold: True
                font_size: 50
            CheckBox:
                on_active: root.checkbox_click(self, self.active, "A")
            
            Label:
                text: "You choose B"
                color: (0,0,0,1)
                bold: True
                font_size: 50
            CheckBox:
                on_active: root.checkbox_click(self, self.active, "B")
        
            Label:
                text: "You choose C"
                color: (0,0,0,1)
                bold: True
                font_size: 50
            CheckBox:
                on_active: root.checkbox_click(self, self.active, "C")
        
        Label:
            id: output_label
            text: "DONE"
            color: (0,0,0,1)
            bold: True
            font_size: 50
