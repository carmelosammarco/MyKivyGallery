#:kivy 1.0
<MyBoxLayout>
    BoxLayout:
        
        orientation: "vertical"
        size: root.width, root.height

        padding:50
        spacing:20

        Label: 
            id: my_label
            text: "Hello world"
            font_size: 32
        
        Button:
            text: "Hello"
            font_size: 32
            size_hint: 0.15, 0.1
            pos_hint: {"center_x": 0.5}
            background_color: 0,0,0,0

            on_press: root.start()
            on_release: root.start_off()

            Image:
                id: my_image
                source: 'photo/button.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y